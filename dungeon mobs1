# basic mob
netherpig1:
  Type: PIGLIN
  AIGoalSelectors:
    - clear
    - goToSpawn{speed=1;max=8;min=7}
    - meleeattack
  Display: '&c&lNether Pig'
  Health: 5
  Damage: 3
  Equipment:
  - GOLDEN_CHESTPLATE{enchants=THORNS:1,} CHEST
  Options:
    AlwaysShowName: false
    MovementSpeed: 0.3
    MaxCombatDistance: 25
    PreventOtherDrops: true   
  Drops:
  - Piglindrops
